generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @unique @default(uuid())
  name     String
  email    String @unique
  password String
  token    String
  api_key  String

  projects Project[]
}

model Project {
  id           String        @id @unique @default(cuid())
  project_name String
  git_url      String
  local_url    String?
  progress     Int           @default(0)
  status       ProjectStatus

  tasks Task[]

  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}

enum ProjectStatus {
  ACTIVE
  COMPLETED
  ONGOING
  INACTIVE
}

model Task {
  id              String     @id @unique @default(cuid())
  title           String
  description     String
  completion_time String
  time_done       String     @default("0")
  status          TaskStatus

  Project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
}

enum TaskStatus {
  ACTIVE
  COMPLETED
  ONGOING
  INACTIVE
}
